<AnchorPane prefHeight="439.0" prefWidth="613.0" stylesheets="@../../resources/css/estilo.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelaLoginController">
   <children>
      <Label layoutX="159.0" layoutY="34.0" text="Autenticação de Usuário" textFill="#c2c2c2">
         <font>
            <Font name="Verdana" size="25.0" />
         </font>
      </Label>
      <VBox layoutX="84.0" layoutY="96.0" prefHeight="268.0" prefWidth="460.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <JFXTextField fx:id="txtUsuarioEmail" labelFloat="true" promptText="Usuário ou E-mail">
               <font>
                  <Font size="25.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </JFXTextField>
            <JFXPasswordField fx:id="passUsuario" labelFloat="true" promptText="Senha">
               <font>
                  <Font size="25.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </JFXPasswordField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <JFXButton fx:id="btEntrar" onAction="#onBtEntrarAction" prefHeight="39.0" prefWidth="265.0" styleClass="button-login" stylesheets="@../css/estilo.css" text="Entrar" textFill="#c2c2c2" />
                  <JFXButton fx:id="btCancelar" onAction="#onBtCancelarAction" prefHeight="39.0" prefWidth="265.0" styleClass="button-login" stylesheets="@../css/estilo.css" text="Cancelar" textFill="#c2c2c2" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
